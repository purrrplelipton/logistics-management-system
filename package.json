{
  "name": "logistics-management-system",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "test:client": "pnpm --filter client test",
    "test:server": "pnpm --filter server test",
    "deploy:server": "flyctl deploy -c fly.toml --remote-only",
    "deploy:client": "flyctl deploy -c fly.client.toml --remote-only",
    "deploy": "pnpm run deploy:server && pnpm run deploy:client"
  },
  "dependencies": {
    "zxcvbn": "^4.4.2",
    "@paralleldrive/cuid2": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/zxcvbn": "^4.4.0",
    "jest": "^30.1.3",
    "typescript": "^5.9.2"
  }
}
